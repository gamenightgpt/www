---
layout: layouts/base.njk
---

{% include "partials/navbar.njk" %}

<main id="main" class="pt-24 bg-paper min-h-screen">
  <article class="mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl py-12">
    <header class="mb-10 pb-6 border-b border-[var(--border-subtle)]">
      <h1 class="text-heading mb-3">{{ title }}</h1>
      <time datetime="{{ date | dateToRfc3339 }}" class="text-muted text-sm">
        {{ date | dateDisplay }}
      </time>
    </header>

    <div class="prose prose-lg max-w-none text-body">
      {{ content | safe }}
    </div>

    <footer class="mt-12 pt-8 border-t border-[var(--border-subtle)]">
      <a href="/blog/" class="text-[var(--accent-orange-dark)] hover:text-[var(--accent-orange-darker)] font-medium transition-colors">
        ‚Üê Back to all posts
      </a>
    </footer>
  </article>
</main>

