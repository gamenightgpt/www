---
layout: layouts/base.njk
---

{% include "partials/navbar.njk" %}

<main id="main" class="pt-24">
  <article class="mx-auto px-4 sm:px-6 lg:px-8 max-w-4xl py-12">
    <header class="mb-8">
      <h1 class="text-[var(--neutral-900)] mb-4">{{ title }}</h1>
      <time datetime="{{ date | dateToRfc3339 }}" class="text-[var(--neutral-700)]">
        {{ date | dateDisplay }}
      </time>
    </header>
    
    <div class="prose prose-lg max-w-none">
      {{ content | safe }}
    </div>
    
    <footer class="mt-12 pt-8 border-t border-[var(--neutral-300)]">
      <a href="/blog/" class="text-[var(--primary-700)] hover:text-[var(--accent-800)] font-medium">
        ‚Üê Back to all posts
      </a>
    </footer>
  </article>
</main>

