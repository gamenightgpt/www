<section id="how-it-works" class="py-8 lg:py-12 bg-noise relative overflow-hidden bg-paper">
  <div class="container mx-auto relative z-10">
    <h2 class="section-title text-center mb-4">
      How It Works
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-2 lg:gap-3 mb-8 max-w-5xl mx-auto">
      <!-- Step 1 -->
      <div class="p-4 rounded-xl border border-white/60 shadow-[0_8px_16px_rgba(0,0,0,0.1)] bg-card">
        <div class="flex items-center gap-2 mb-0">
          <div class="w-12 flex justify-center">
            {% image "/images/question.png", "Question", [42, 84], "32px", "h-8 w-auto object-contain" %}
          </div>
          <h3 class="font-bold text-xl text-heading leading-tight">Ask a Question</h3>
        </div>
        <p class="text-heading text-sm leading-relaxed px-1 pl-14">
          Type your question in plain English.
        </p>
      </div>

      <!-- Step 2 -->
      <div class="p-4 rounded-xl border border-white/60 shadow-[0_8px_16px_rgba(0,0,0,0.1)] bg-card">
        <div class="flex items-center gap-2 mb-0">
          <div class="w-12 flex justify-center">
            {% image "/images/answer.png", "Answer", [42, 84], "32px", "h-8 w-auto object-contain" %}
          </div>
          <h3 class="font-bold text-xl text-heading leading-tight">Get an Answer</h3>
        </div>
        <p class="text-heading text-sm leading-relaxed px-1 pl-14">
          Get fast, accurate answers based on official rules.
        </p>
      </div>

      <!-- Step 3 -->
      <div class="p-4 rounded-xl border border-white/60 shadow-[0_8px_16px_rgba(0,0,0,0.1)] bg-card">
        <div class="flex items-center gap-2 mb-0">
          <div class="w-12 flex justify-center">
            {% image "/images/source.png", "Source", [42, 84], "32px", "h-8 w-auto object-contain" %}
          </div>
          <h3 class="font-bold text-xl text-heading leading-tight">See the Source</h3>
        </div>
        <p class="text-heading text-sm leading-relaxed px-1 pl-14">
          Every answer includes citations from the rulebook or FAQ.
        </p>
      </div>
    </div>

    <div class="text-center mb-0">
      <a href="https://app.gamenightgpt.com" class="inline-block px-12 py-3 rounded-lg font-bold text-lg btn-3d-orange text-white no-underline plausible-event-name=CTA+HowItWorks">
        Get Started
      </a>
    </div>
  </div>

  <!-- Die Decoration -->
  {% image "/images/die.png", "", [128, 256], "128px", "hidden lg:block absolute bottom-[-10px] right-[-10px] w-24 h-24 lg:w-32 lg:h-32 object-contain drop-shadow-xl transform -rotate-12 pointer-events-none" %}
</section>
