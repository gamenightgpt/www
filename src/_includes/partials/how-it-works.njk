<section id="how-it-works" class="pt-4 pb-8 lg:pt-6 lg:pb-12 border-t bg-noise relative overflow-hidden bg-paper" style="border-color: rgba(211, 197, 168, 0.3);">
  <div class="container mx-auto px-4 relative z-10">
    <h2 class="section-title text-center mb-4">
      How It Works
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-2 lg:gap-3 mb-8 max-w-5xl mx-auto">
      <!-- Step 1 -->
      <div class="p-4 rounded-xl border border-white/60 shadow-[0_8px_16px_rgba(0,0,0,0.1)]" style="background-color: var(--bg-card);">
        <div class="flex items-center gap-2 mb-0">
          <!-- Icon: Question -->
          <div class="w-12 flex justify-center">
            {% image "/images/question.png", "Question", [42, 84], "32px", "h-8 w-auto object-contain" %}
          </div>
          <h3 class="font-bold text-xl text-[#2C241B] leading-tight">Ask a Question</h3>
        </div>
        <p class="text-[#2C241B] text-sm leading-relaxed px-1 pl-14">
          Type your question in plain English.
        </p>
      </div>

      <!-- Step 2 -->
      <div class="p-4 rounded-xl border border-white/60 shadow-[0_8px_16px_rgba(0,0,0,0.1)]" style="background-color: var(--bg-card);">
        <div class="flex items-center gap-2 mb-0">
           <!-- Icon: Answer -->
          <div class="w-12 flex justify-center">
            {% image "/images/answer.png", "Answer", [42, 84], "32px", "h-8 w-auto object-contain" %}
          </div>
          <h3 class="font-bold text-xl text-[#2C241B] leading-tight">Get an Answer</h3>
        </div>
        <p class="text-[#2C241B] text-sm leading-relaxed px-1 pl-14">
          Get fast, accurate answers based on official rules.
        </p>
      </div>

      <!-- Step 3 -->
      <div class="p-4 rounded-xl border border-white/60 shadow-[0_8px_16px_rgba(0,0,0,0.1)]" style="background-color: var(--bg-card);">
        <div class="flex items-center gap-2 mb-0">
           <!-- Icon: Source -->
          <div class="w-12 flex justify-center">
            {% image "/images/source.png", "Source", [42, 84], "32px", "h-8 w-auto object-contain" %}
          </div>
          <h3 class="font-bold text-xl text-[#2C241B] leading-tight">See the Source</h3>
        </div>
        <p class="text-[#2C241B] text-sm leading-relaxed px-1 pl-14">
          Every answer includes citations from the rulebook or FAQ.
        </p>
      </div>
    </div>

    <div class="text-center mb-0">
      <a href="/search" class="inline-block px-12 py-3 rounded-lg font-bold text-lg btn-3d-orange text-white no-underline">
        Get Started
      </a>
    </div>
  </div>

  <!-- Die Decoration -->
  {% image "/images/die.png", "", [128, 256], "128px", "hidden lg:block absolute bottom-[-10px] right-[-10px] w-24 h-24 lg:w-32 lg:h-32 object-contain drop-shadow-xl transform -rotate-12 pointer-events-none" %}
</section>
