<section class="py-6 lg:py-10 bg-paper text-heading">
  <div class="container mx-auto text-center">
    <!-- Header -->
    <div class="section-title mb-2 text-center">
      Ask questions about hundreds of board games...
    </div>
    <!-- Subheader -->
    <p class="text-xl lg:text-2xl font-normal opacity-90 mb-6 text-body font-body mx-auto">
      ...with new games added regularly.
    </p>

    <!-- Game Trays Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-[2px] max-w-3xl mx-auto">
      <!-- Tray 1: 7 Wonders & Brass -->
      <div class="grid grid-cols-2 divide-x bg-card rounded-md shadow-[0_3px_0_var(--shadow-tray)] border border-subtle overflow-hidden pointer-events-none divide-[var(--border-subtle)]">
        <!-- Game 1 -->
        <div class="flex flex-col items-center p-0 py-0">
          <div class="hex-icon-wrapper mt-5 mb-0 w-[170px] h-[180px]">
            <div class="hex-content">
              {% image "/images/7-wonders.png", "7 Wonders", [170, 340], "170px", "w-full h-full object-cover scale-[1.4]", "eager" %}
            </div>
          </div>
          <div class="font-normal text-lg text-heading mt-0 mb-2 font-body leading-tight">7 Wonders</div>
        </div>

        <!-- Game 2 -->
        <div class="flex flex-col items-center p-0 py-0">
          <div class="hex-icon-wrapper mt-5 mb-0 w-[170px] h-[180px]">
            <div class="hex-content">
              {% image "/images/brass-birmingham.png", "Brass Birmingham", [170, 340], "170px", "w-full h-full object-cover scale-[1.35]", "eager" %}
            </div>
          </div>
          <div class="font-normal text-lg text-heading mt-0 mb-2 font-body leading-tight">Brass: Birmingham</div>
        </div>
      </div>

      <!-- Tray 2: Spirit Island & Terraforming Mars -->
      <div class="grid grid-cols-2 divide-x bg-card rounded-md shadow-[0_3px_0_var(--shadow-tray)] border border-subtle overflow-hidden pointer-events-none divide-[var(--border-subtle)]">
        <!-- Game 3 -->
        <div class="flex flex-col items-center p-0 py-0">
          <div class="hex-icon-wrapper mt-5 mb-0 w-[170px] h-[180px]">
            <div class="hex-content">
              {% image "/images/spirit-island.png", "Spirit Island", [170, 340], "170px", "w-full h-full object-cover scale-[1.4]", "eager" %}
            </div>
          </div>
          <div class="font-normal text-lg text-heading mt-0 mb-2 font-body leading-tight">Spirit Island</div>
        </div>

        <!-- Game 4 -->
        <div class="flex flex-col items-center p-0 py-0">
          <div class="hex-icon-wrapper mt-5 mb-0 w-[170px] h-[180px]">
            <div class="hex-content">
              {% image "/images/terraforming-mars.png", "Terraforming Mars", [170, 340], "170px", "w-full h-full object-cover scale-[1.55]", "eager" %}
            </div>
          </div>
          <div class="font-normal text-lg text-heading mt-0 mb-2 font-body leading-tight">Terraforming Mars</div>
        </div>
      </div>
    </div>
  </div>
</section>
