<section class="py-6 lg:py-10 bg-paper" style="color: var(--text-heading);">
  <div class="container mx-auto px-4 text-center">
    <!-- Header: Explicit size ~26px, Normal weight (heavier than light), NO bold -->
    <div class="section-title mb-2 text-center">
      Ask questions about hundreds of board games...
    </div>
    <!-- Subheader: Larger size to match Hero, Normal weight -->
    <p class="text-xl lg:text-2xl font-normal opacity-90 mb-6 text-[#4A3E33] font-['DM_Sans']">
      ...with new games added regularly.
    </p>

    <!-- Compressed layout: max-w-3xl, gap-[2px] (tiny) -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-[2px] max-w-3xl mx-auto">
      <!-- Tray 1: 7 Wonders & Brass -->
      <div class="grid grid-cols-2 divide-x bg-[#F0ECE2] rounded-md shadow-[0_3px_0_#D3C5A8] border overflow-hidden pointer-events-none" style="background-color: var(--bg-card); border-color: var(--border-subtle); divide-color: var(--border-subtle);">
        <!-- Game 1 -->
        <div class="flex flex-col items-center p-0 py-0">
          <div class="hex-icon-wrapper mt-5 mb-0 w-[170px] h-[180px]">
            <div class="hex-content">
              {% image "/images/7-wonders.png", "7 Wonders", [170, 340], "170px", "w-full h-full object-cover scale-[1.4]", "eager" %}
            </div>
          </div>
          <div class="font-normal text-lg text-[#2C241B] mt-0 mb-2 font-['DM_Sans'] leading-tight">7 Wonders</div>
        </div>

        <!-- Game 2 -->
        <div class="flex flex-col items-center p-0 py-0">
          <div class="hex-icon-wrapper mt-5 mb-0 w-[170px] h-[180px]">
            <div class="hex-content">
              {% image "/images/brass-birmingham.png", "Brass Birmingham", [170, 340], "170px", "w-full h-full object-cover scale-[1.35]", "eager" %}
            </div>
          </div>
          <div class="font-normal text-lg text-[#2C241B] mt-0 mb-2 font-['DM_Sans'] leading-tight">Brass: Birmingham</div>
        </div>
      </div>

      <!-- Tray 2: Spirit Island & Terraforming Mars -->
      <div class="grid grid-cols-2 divide-x bg-[#F0ECE2] rounded-md shadow-[0_3px_0_#D3C5A8] border overflow-hidden pointer-events-none" style="background-color: var(--bg-card); border-color: var(--border-subtle); divide-color: var(--border-subtle);">
        <!-- Game 3 -->
        <div class="flex flex-col items-center p-0 py-0">
          <div class="hex-icon-wrapper mt-5 mb-0 w-[170px] h-[180px]">
            <div class="hex-content">
              {% image "/images/spirit-island.png", "Spirit Island", [170, 340], "170px", "w-full h-full object-cover scale-[1.4]", "eager" %}
            </div>
          </div>
          <div class="font-normal text-lg text-[#2C241B] mt-0 mb-2 font-['DM_Sans'] leading-tight">Spirit Island</div>
        </div>

        <!-- Game 4 -->
        <div class="flex flex-col items-center p-0 py-0">
          <div class="hex-icon-wrapper mt-5 mb-0 w-[170px] h-[180px]">
            <div class="hex-content">
              {% image "/images/terraforming-mars.png", "Terraforming Mars", [170, 340], "170px", "w-full h-full object-cover scale-[1.55]", "eager" %}
            </div>
          </div>
          <div class="font-normal text-lg text-[#2C241B] mt-0 mb-2 font-['DM_Sans'] leading-tight">Terraforming Mars</div>
        </div>
      </div>
    </div>
  </div>
</section>












