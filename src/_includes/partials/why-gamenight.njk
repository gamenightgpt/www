<section class="py-6 lg:py-8 bg-paper">
  <div class="container mx-auto px-4">
    
    <!-- Header with dotted lines -->
    <!-- Reduced mb-6 to mb-3 -->
    <div class="flex items-center justify-center gap-4 mb-3 max-w-4xl mx-auto">
      <div class="hidden md:block h-px w-full border-t-[2px] border-dotted" style="border-color: var(--border-dotted);"></div>
      <h2 class="section-title whitespace-nowrap leading-tight">
        Why GameNightGPT?
      </h2>
      <div class="hidden md:block h-px w-full border-t-[2px] border-dotted" style="border-color: var(--border-dotted);"></div>
    </div>

    <!-- 3 Columns -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 max-w-5xl mx-auto text-center">
      
      <!-- Feature 1: Fast -->
      <div class="flex flex-col items-center">
        <!-- Changed h-52 items-end to h-56 items-center. mb-2 to mb-0. -->
        <!-- Center alignment lowers the tall icon relative to the top (padding introduced). -->
        <div class="w-full h-28 md:h-56 flex items-center justify-center mb-0">
          {% image "/images/hourglass.png", "Hourglass", [104, 208, 416], "(min-width: 768px) 208px, 96px", "w-auto h-24 md:h-52 object-contain drop-shadow-md" %}
        </div>
        <h3 class="text-xl font-bold mb-2 text-[#2C241B] leading-tight">Fast</h3>
        <p class="text-lg leading-snug text-[#4A3E33] font-['DM_Sans']">
          Get citation-backed<br>answers in seconds.
        </p>
      </div>

      <!-- Feature 2: Neutral -->
      <div class="flex flex-col items-center md:border-l md:border-r md:px-4" style="border-color: rgba(211, 197, 168, 0.5);">
        <div class="w-full h-28 md:h-56 flex items-center justify-center mb-0">
          {% image "/images/scale.png", "Scale", [104, 208, 416], "(min-width: 768px) 208px, 96px", "w-auto h-24 md:h-52 object-contain drop-shadow-md" %}
        </div>
        <h3 class="text-xl font-bold mb-2 text-[#2C241B] leading-tight">Neutral</h3>
        <p class="text-lg leading-snug text-[#4A3E33] font-['DM_Sans']">
          An unbiased referee<br>quoting the rules.
        </p>
      </div>

      <!-- Feature 3: Transparent -->
      <div class="flex flex-col items-center">
        <!-- h-56 items-center. Book (h-44) will float in center. -->
        <div class="w-full h-28 md:h-56 flex items-center justify-center mb-0">
          {% image "/images/book.png", "Open Book", [88, 176, 352], "(min-width: 768px) 176px, 80px", "w-auto h-20 md:h-44 object-contain drop-shadow-md" %}
        </div>
        <h3 class="text-xl font-bold mb-2 text-[#2C241B] leading-tight">Transparent</h3>
        <p class="text-lg leading-snug text-[#4A3E33] font-['DM_Sans']">
          See the exact text behind<br>every answer.
        </p>
      </div>

    </div>
  </div>
</section>
