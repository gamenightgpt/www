<section class="py-8 lg:py-12 bg-dark-coffee">
  <div class="container mx-auto">

    <h2 class="section-title text-on-dark text-center mb-6">
      Why GameNightGPT?
    </h2>

    <!-- 3 Columns -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 md:gap-12 max-w-5xl mx-auto text-center">

      <!-- Feature 1: Fast -->
      <div class="flex flex-col items-center">
        <div class="w-full h-28 md:h-56 flex items-center justify-center mb-0">
          {% image "/images/hourglass.png", "Hourglass", [104, 208, 416], "(min-width: 768px) 208px, 96px", "w-auto h-24 md:h-52 object-contain drop-shadow-lg" %}
        </div>
        <h3 class="text-xl font-bold mb-2 text-accent-gold leading-tight">Fast</h3>
        <p class="text-lg leading-snug text-on-dark opacity-90 font-body">
          Get citation-backed answers in seconds.
        </p>
      </div>

      <!-- Feature 2: Neutral -->
      <div class="flex flex-col items-center md:border-l md:border-r md:px-4 border-[rgba(234,212,170,0.2)]">
        <div class="w-full h-28 md:h-56 flex items-center justify-center mb-0">
          {% image "/images/scale.png", "Scale", [104, 208, 416], "(min-width: 768px) 208px, 96px", "w-auto h-24 md:h-52 object-contain drop-shadow-lg" %}
        </div>
        <h3 class="text-xl font-bold mb-2 text-accent-gold leading-tight">Neutral</h3>
        <p class="text-lg leading-snug text-on-dark opacity-90 font-body">
          An unbiased referee quoting the rules.
        </p>
      </div>

      <!-- Feature 3: Transparent -->
      <div class="flex flex-col items-center">
        <div class="w-full h-28 md:h-56 flex items-center justify-center mb-0">
          {% image "/images/book.png", "Open Book", [88, 176, 352], "(min-width: 768px) 176px, 80px", "w-auto h-20 md:h-44 object-contain drop-shadow-lg" %}
        </div>
        <h3 class="text-xl font-bold mb-2 text-accent-gold leading-tight">Transparent</h3>
        <p class="text-lg leading-snug text-on-dark opacity-90 font-body">
          See the exact text behind every answer.
        </p>
      </div>

    </div>
  </div>
</section>
