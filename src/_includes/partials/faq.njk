<section class="py-12 md:py-16 lg:py-20">
  <div class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <h2 class="text-center text-[var(--neutral-900)] mb-12">
      Frequently Asked Questions
    </h2>
    <div class="max-w-3xl mx-auto">
      <div class="faq-item border-b border-[var(--neutral-300)]">
        <button
          onclick="toggleFAQ(0)"
          class="w-full py-6 flex items-center justify-between text-left hover:bg-[var(--neutral-100)] rounded-lg px-4 -mx-4 transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--primary-500)] focus-visible:ring-offset-2"
          aria-expanded="false"
          aria-controls="faq-answer-0"
        >
          <h3 class="text-[var(--neutral-900)] pr-4 text-left">How does GameNightGPT work?</h3>
          <span class="faq-icon text-3xl text-[var(--primary-500)] transition-transform flex-shrink-0 w-12 h-12 flex items-center justify-center" aria-hidden="true">+</span>
        </button>
        <div id="faq-answer-0" class="faq-answer overflow-hidden transition-all duration-300 max-h-0">
          <p class="text-[var(--neutral-700)] px-4 pb-6">GameNightGPT uses advanced AI that understands hundreds of official rulebooks, FAQs, and errata. Simply type your rules question in natural language, and get an instant, accurate answer with source citations.</p>
        </div>
      </div>
      
      <div class="faq-item border-b border-[var(--neutral-300)]">
        <button
          onclick="toggleFAQ(1)"
          class="w-full py-6 flex items-center justify-between text-left hover:bg-[var(--neutral-100)] rounded-lg px-4 -mx-4 transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--primary-500)] focus-visible:ring-offset-2"
          aria-expanded="false"
          aria-controls="faq-answer-1"
        >
          <h3 class="text-[var(--neutral-900)] pr-4 text-left">Which games are supported?</h3>
          <span class="faq-icon text-3xl text-[var(--primary-500)] transition-transform flex-shrink-0 w-12 h-12 flex items-center justify-center" aria-hidden="true">+</span>
        </button>
        <div id="faq-answer-1" class="faq-answer overflow-hidden transition-all duration-300 max-h-0">
          <p class="text-[var(--neutral-700)] px-4 pb-6">We currently support over 200 popular board games, from classics like Catan and Ticket to Ride to complex games like Twilight Imperium and Spirit Island. We add more games every month based on user requests.</p>
        </div>
      </div>
      
      <div class="faq-item border-b border-[var(--neutral-300)]">
        <button
          onclick="toggleFAQ(2)"
          class="w-full py-6 flex items-center justify-between text-left hover:bg-[var(--neutral-100)] rounded-lg px-4 -mx-4 transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--primary-500)] focus-visible:ring-offset-2"
          aria-expanded="false"
          aria-controls="faq-answer-2"
        >
          <h3 class="text-[var(--neutral-900)] pr-4 text-left">How accurate are the answers?</h3>
          <span class="faq-icon text-3xl text-[var(--primary-500)] transition-transform flex-shrink-0 w-12 h-12 flex items-center justify-center" aria-hidden="true">+</span>
        </button>
        <div id="faq-answer-2" class="faq-answer overflow-hidden transition-all duration-300 max-h-0">
          <p class="text-[var(--neutral-700)] px-4 pb-6">Very accurate! Every answer is based on official sources and includes citations. Our AI is specifically trained to avoid speculation and only provide information from rulebooks, official FAQs, and publisher clarifications.</p>
        </div>
      </div>
      
      <div class="faq-item">
        <button
          onclick="toggleFAQ(3)"
          class="w-full py-6 flex items-center justify-between text-left hover:bg-[var(--neutral-100)] rounded-lg px-4 -mx-4 transition-all duration-200 focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--primary-500)] focus-visible:ring-offset-2"
          aria-expanded="false"
          aria-controls="faq-answer-3"
        >
          <h3 class="text-[var(--neutral-900)] pr-4 text-left">When will I get access?</h3>
          <span class="faq-icon text-3xl text-[var(--primary-500)] transition-transform flex-shrink-0 w-12 h-12 flex items-center justify-center" aria-hidden="true">+</span>
        </button>
        <div id="faq-answer-3" class="faq-answer overflow-hidden transition-all duration-300 max-h-0">
          <p class="text-[var(--neutral-700)] px-4 pb-6">We're rolling out access gradually, starting this September. The earlier you join the waitlist, the sooner you'll get access. Keep an eye on your inbox!</p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
function toggleFAQ(index) {
  const button = event.currentTarget;
  const answer = document.getElementById(`faq-answer-${index}`);
  const icon = button.querySelector('.faq-icon');
  const isOpen = button.getAttribute('aria-expanded') === 'true';
  
  // Close all other FAQs
  document.querySelectorAll('.faq-item').forEach((item, i) => {
    if (i !== index) {
      const otherButton = item.querySelector('button');
      const otherAnswer = item.querySelector('.faq-answer');
      const otherIcon = item.querySelector('.faq-icon');
      otherButton.setAttribute('aria-expanded', 'false');
      otherAnswer.style.maxHeight = '0';
      otherIcon.style.transform = 'rotate(0deg)';
    }
  });
  
  // Toggle current FAQ
  if (isOpen) {
    button.setAttribute('aria-expanded', 'false');
    answer.style.maxHeight = '0';
    icon.style.transform = 'rotate(0deg)';
  } else {
    button.setAttribute('aria-expanded', 'true');
    answer.style.maxHeight = answer.scrollHeight + 'px';
    icon.style.transform = 'rotate(45deg)';
  }
}
</script>