<section class="pt-24 pb-12 md:pt-32 md:pb-16 overflow-hidden">
  <div class="mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
      <!-- Text content -->
      <div class="text-center md:text-left">
        <h1 class="text-[var(--neutral-900)] mb-6">
          Get Answers Fast &mdash; Keep Gaming
        </h1>
        <p class="text-lg md:text-xl text-[var(--neutral-700)] mb-8 leading-relaxed">
          Get instant, accurate answers to your rules questions. <br/>
          Your AI-powered board game assistant keeps the fun rolling.
        </p>
        <button
          onclick="document.getElementById('signup').scrollIntoView({ behavior: 'smooth' })"
          class="btn-primary text-lg px-8 py-4"
          aria-label="Join the waitlist for early access"
        >
          Join the Waitlist
        </button>
      </div>
      
      <!-- Illustration -->
      <div class="relative mt-8 md:mt-0">
        <div class="relative max-w-lg mx-auto">
          <!-- Board game table -->
          <svg
            viewBox="0 0 400 300"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            class="w-full h-auto"
          >
            <!-- Table surface -->
            <rect x="50" y="100" width="300" height="150" rx="8" fill="#8B4513" />
            <rect x="50" y="100" width="300" height="140" rx="8" fill="#A0522D" />
            
            <!-- Game board -->
            <rect x="100" y="130" width="200" height="80" rx="4" fill="#F5DEB3" stroke="#8B4513" stroke-width="2" />
            
            <!-- Board grid -->
            <g opacity="0.3">
              <line x1="150" y1="130" x2="150" y2="210" stroke="#8B4513" stroke-width="1" />
              <line x1="200" y1="130" x2="200" y2="210" stroke="#8B4513" stroke-width="1" />
              <line x1="250" y1="130" x2="250" y2="210" stroke="#8B4513" stroke-width="1" />
              <line x1="100" y1="170" x2="300" y2="170" stroke="#8B4513" stroke-width="1" />
            </g>
            
            <!-- Game pieces -->
            <circle cx="125" cy="150" r="12" fill="var(--primary-500)" />
            <circle cx="175" cy="190" r="12" fill="var(--accent-500)" />
            <rect x="220" y="145" width="20" height="20" rx="2" fill="#4CAF50" />
            <polygon points="275,160 265,175 285,175" fill="#9C27B0" />
            
            <!-- Dice -->
            <g transform="translate(320, 180)">
              <rect width="24" height="24" rx="4" fill="white" stroke="var(--neutral-900)" stroke-width="1" />
              <circle cx="8" cy="8" r="2" fill="var(--neutral-900)" />
              <circle cx="16" cy="16" r="2" fill="var(--neutral-900)" />
            </g>
            
            <!-- Cards -->
            <g transform="translate(80, 180)">
              <rect x="0" y="4" width="30" height="40" rx="2" fill="#E8F5E9" stroke="#4CAF50" stroke-width="1" transform="rotate(-5 15 24)" />
              <rect x="0" y="0" width="30" height="40" rx="2" fill="white" stroke="var(--neutral-900)" stroke-width="1" />
              <text x="15" y="25" font-size="20" text-anchor="middle" fill="var(--neutral-900)">?</text>
            </g>
          </svg>
          
          <!-- Floating chat bubble -->
          <div class="absolute top-8 right-12 animate-float">
            <div class="relative bg-white rounded-2xl shadow-lg px-4 py-3 border-2 border-[var(--primary-500)]">
              <div class="flex items-center gap-2">
                <span class="text-2xl">âœ¨</span>
                <p class="text-sm font-medium text-[var(--neutral-900)]">
                  "Can I build a settlement here?"
                </p>
              </div>
              <!-- Chat bubble tail -->
              <div class="absolute -bottom-2 left-8 w-4 h-4 bg-white border-b-2 border-r-2 border-[var(--primary-500)] transform rotate-45"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  .animate-float {
    animation: float 3s ease-in-out infinite;
  }
</style>